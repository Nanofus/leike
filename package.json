{
  "name": "leike",
  "version": "0.3.0",
  "description": "",
  "author": "Ville Talonpoika",
  "license": "GPL-2.0",
  "main": "app/main.js",
  "scripts": {
    "start": "electron ./app/main.js",
    "build": "gulp && npm run pack",
    "clean": "gulp cleandist",
    "clean:win": "gulp cleandist:win",
    "clean:osx": "gulp cleandist:osx",
    "clean:linux": "gulp cleandist:linux",
    "pack": "npm run clean && npm run pack:linux && npm run pack:win",
    "pack:osx": "npm run clean:osx && electron-packager . \"Leike\" --out=builds/osx --platform=darwin --arch=all --version=0.36.1 --icon=app/img/icon.ico --ignore=\"./(builds|src|scss)\"",
    "pack:win": "npm run clean:win && electron-packager . \"Leike\" --out=builds/win --platform=win32 --arch=all --version=0.36.1 --icon=app/img/icon.ico --version-string.CompanyName=\"Companyname\" --version-string.FileDescription=\"Leike\" --version-string.ProductName=\"Leike\" --version-string.OriginalFilename=\"Leike\" --version-string.LegalCopyright=\"(c) Ville Talonpoika 2015\" --ignore=\"./(builds|src|scss)\"",
    "pack:linux": "npm run clean:linux && electron-packager . \"Leike\" --out=builds/linux --platform=linux --arch=all --version=0.36.1 --ignore=\"./(builds|src|scss)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nanofus/leike.git"
  },
  "keywords": [
    "clipboard",
    "manager"
  ],
  "bugs": {
    "url": "https://github.com/Nanofus/leike/issues"
  },
  "homepage": "https://github.com/Nanofus/leike#readme",
  "devDependencies": {
    "del": "^2.2.0",
    "electron-builder": "^2.6.0",
    "electron-packager": "^5.2.0",
    "electron-prebuilt": "*",
    "gulp": "^3.9.0",
    "gulp-coffee": "^2.3.1",
    "gulp-sass": "^2.1.1",
    "gulp-util": "^3.0.7"
  },
  "dependencies": {
    "autolinker": "^0.22.0",
    "fs-extra": "^0.26.4",
    "highlight.js": "^9.1.0",
    "vue": "^1.0.13"
  }
}
